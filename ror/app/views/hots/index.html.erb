<title>热点事件</title>
<!-- BEGIN PAGE -->
<div class="page-content">
	<!-- BEGIN PAGE CONTAINER-->
	<div class="container-fluid">
		<!-- BEGIN PAGE HEADER-->
		<div class="row-fluid">
			<div class="span12"> 	
				<!-- BEGIN PAGE TITLE & BREADCRUMB-->			
				<h3 class="page-title">
					<span class="main_title" id="hot">热点事件</span>
					<small>跟踪查询事件整个过程</small>
				</h3>
				<ul class="breadcrumb">
					<li>
						<i class="icon-home"></i>
						<a href="/hots/index">热点事件</a> 
						<i class="icon-angle-right"></i>
					</li>
					<li><a href="#">首页</a></li>
				</ul>
				<!-- END PAGE TITLE & BREADCRUMB-->
			</div>
		</div>
		<!-- END PAGE HEADER-->
		<!-- BEGIN PAGE CONTENT-->		
		
			
		<div class="row-fluid">
			<div class="row-fluid add-portfolio">
				<div class="pull-left">
					<span>共有<%= hots_num %>个热点事件正在关注中</span>
				</div>
				<div class="pull-right">
					<a href="/hots/new" data-toggle="modal" class="btn icn-only green">添加一个新的热点事件 <i class="m-icon-swapright m-icon-white"></i></a> 									
				</div>
			</div>
			<% if @hots%>
			<% @hots.each do |hot|%>
			<div class="row-fluid portfolio-block">


				
				<div class="span5 portfolio-text">
					<img src="/assets/img/hot.jpg" alt="" width="74" style="border:3px solid #16a1f2;">
					<div class="portfolio-text-info">
						<h4><%= hot.name %></h4>
						<p><!-- 
							<% if hot.has_keywords.length>0 %>
								包含关键词：<%= hot.has_keywords %><br>
							<% end %>
						   	<% if hot.without_keywords.length>0 %>
								不含关键词：<%= hot.has_keywords %><br>
						   	<% end %>
							<% if hot.any_keywords.length>0 %>
								含任意关键词：<%= hot.has_keywords %><br>
						   	<% end %> -->
						   	时间：<%= (hot.start_at).strftime("%Y年%m月%d日") %> ~ <%= (hot.end_at).strftime("%Y年%m月%d日") %>

						</p>

					</div>
				</div>
				<div class="span4" style="overflow:hidden;">
					<div class="portfolio-info">
						今日相关信息
						<span><%= hot_today_num(hot.id) %></span>
					</div>
					<div class="portfolio-info">
						全部相关信息
						<span><%= hot_total_num(hot.id) %></span>
					</div>
				</div>
				<div class="span2 portfolio-btn">
					<a href="/hots/report/<%= hot.id %>" class="btn bigicn-only"><span>查看事件概览</span></a>								
				</div>
				<div class="span1 portfolio-btn portfolio-btn2">

					<a href="/hots/destroy/<%= hot.id %>" class="btn bigicn-only"><span>删除</span></a>	
				</div>
				
			</div>
			<% end %>
			<% end %>
		<!-- END PAGE CONTENT-->
	</div>
	<!-- END PAGE CONTAINER-->		
</div>
<!-- END PAGE -->
</div>
<!-- END CONTAINER -->
