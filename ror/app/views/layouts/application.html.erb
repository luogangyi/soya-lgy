<script>
    jQuery(document).ready(function() {   
      $("#setting").click(function(event) {
        if ($("#side-shadow").css("display") == "block") {
          $("#tbsSettingDone").click();
        }
        $("#firstTip").hide();
        var dsideShadow = $('#side-shadow');
        dsideShadow.show();
        if (parseInt(dsideShadow.css('left')) != 0) {
          dsideShadow.animate({
            left: '0px'
          }, 300);
        } else {
          dsideShadow.animate({
            left: '100%'
          }, 300, function() {
            dsideShadow.hide();
          });
        }
        $("body").toggleClass("popup");
        
      });
      
    
      $("#navShadow").click(function(event) {
